# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Pinecone Configuration (Optional - for production vector storage)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/chatbot_db
SPRING_DATASOURCE_USERNAME=chatbot_user
SPRING_DATASOURCE_PASSWORD=chatbot_password

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=86400000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/chatbot.log

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook Configuration (Optional - for integrations)
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_SECRET=your-webhook-secret
